{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
